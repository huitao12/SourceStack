@page
@model SourceStack.Pages.Candle.PyramidModel
@{
}

<div style="text-align:center">
    @for (int i = 0; i <= 20; i++)
    {
        for (int j = 0; j < 2 * i - 1; j++)
        {
            if (i % 2 == 0)
            {
                <span style="color:red">i</span>
            }
            else
            {
                <span style="color:blue">i</span>
            }
        }<br />
    }
</div>